{#
/**
 * @file
 * Notifications/alerts panel component.
 *
 * Variables:
 * - notifications: Array of notification objects with:
 *   - type: 'info' | 'warning' | 'success' | 'neutral'
 *   - icon: Icon name
 *   - message: Notification message
 *   - url: Optional link URL
 */
#}
{% if notifications %}
<div class="mel-notifications">
  <div class="mel-notifications__header">
    <h3 class="mel-notifications__title">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/>
      </svg>
      {{ 'Notifications'|t }}
    </h3>
    <span class="mel-notifications__count">{{ notifications|length }}</span>
  </div>
  
  <div class="mel-notifications__list">
    {% for notification in notifications %}
      <{% if notification.url %}a href="{{ notification.url }}"{% else %}div{% endif %} class="mel-notification mel-notification--{{ notification.type }}">
        <div class="mel-notification__icon">
          {% if notification.icon == 'calendar' %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
          {% elseif notification.icon == 'image' %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/>
            </svg>
          {% elseif notification.icon == 'edit' %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
          {% elseif notification.icon == 'credit-card' %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/><line x1="1" y1="10" x2="23" y2="10"/>
            </svg>
          {% else %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/>
            </svg>
          {% endif %}
        </div>
        <span class="mel-notification__message">{{ notification.message }}</span>
        {% if notification.url %}
          <svg class="mel-notification__arrow" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"/>
          </svg>
        {% endif %}
      </{% if notification.url %}a{% else %}div{% endif %}>
    {% endfor %}
  </div>
</div>
{% endif %}
















