{#
/**
 * @file
 * Reusable KPI card component.
 *
 * Variables:
 * - label: Card label text
 * - value: Main value to display
 * - currency: Optional currency symbol
 * - icon: Icon name (revenue, calendar, tickets, users, views)
 * - color: Color theme (coral, blue, green, purple, yellow)
 * - delta: Optional change indicator { value, label, positive }
 * - highlight: Boolean to highlight the card
 */
#}
<div class="mel-kpi-card{% if highlight %} mel-kpi-card--highlight{% endif %}">
  <div class="mel-kpi-card__header">
    <div class="mel-kpi-card__icon mel-kpi-card__icon--{{ color|default('blue') }}">
      {% if icon == 'revenue' or icon == 'dollar' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
        </svg>
      {% elseif icon == 'calendar' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>
        </svg>
      {% elseif icon == 'tickets' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"/>
        </svg>
      {% elseif icon == 'users' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
        </svg>
      {% elseif icon == 'views' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/>
        </svg>
      {% elseif icon == 'orders' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/>
        </svg>
      {% else %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/>
        </svg>
      {% endif %}
    </div>
  </div>
  <div class="mel-kpi-card__label">{{ label }}</div>
  <div class="mel-kpi-card__value">
    {% if currency %}<span class="mel-kpi-card__currency">{{ currency }}</span>{% endif %}
    {{ value }}
  </div>
  {% if delta %}
    <div class="mel-kpi-card__delta mel-kpi-card__delta--{{ delta.positive ? 'positive' : 'negative' }}">
      {% if delta.positive %}↑{% else %}↓{% endif %}
      {{ delta.value }}
      <span class="mel-kpi-card__delta-label">{{ delta.label }}</span>
    </div>
  {% endif %}
</div>
















