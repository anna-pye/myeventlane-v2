{#
/**
 * @file
 * Default theme implementation to display a view of unformatted rows.
 *
 * MyEventLane override:
 * - If this is an Event View (node: event), wrap rows in the canonical
 *   `.mel-event-grid` and output row content without wrapper divs.
 * - Otherwise, fall back to core's default unformatted markup.
 */
#}

{% if mel_is_event_view %}
  {% if rows %}
    {# DEBUG: mel_is_event_view is TRUE, using grid wrapper #}
    <div class="mel-event-grid">
      {% for row in rows %}
        {{- row.content -}}
      {% endfor %}
    </div>
  {% endif %}
{% else %}
  {# DEBUG: mel_is_event_view is FALSE, using default markup #}
  {% if title %}
    <h3>{{ title }}</h3>
  {% endif %}

  {% for row in rows %}
    {%
      set row_classes = [
        default_row_class ? 'views-row',
      ]
    %}
    <div{{ row.attributes.addClass(row_classes) }}>
      {{- row.content -}}
    </div>
  {% endfor %}
{% endif %}
