{#
/**
 * @file
 * Theme override for the Upcoming Events category page.
 */
#}
<div class="view view-upcoming-events view-category">
  <div class="view-content">
    {{ rows }}
  </div>
  {% if pager %}
    {{ pager }}
  {% endif %}
  {% if empty %}
    <div class="view-empty" style="text-align: center; padding: 3rem; color: #5c5c6f;">
      <p style="font-size: 1.25rem;">No events found in this category yet.</p>
      <a href="/node/add/event" class="mel-btn mel-btn-primary" style="margin-top: 1rem;">Create the first event!</a>
    </div>
  {% endif %}
</div>






