{#
/**
 * @file
 * Theme override for the Upcoming Events category page.
 * Wraps rows in canonical event grid for consistent layout.
 */
#}
{% if rows %}
  <div{{ attributes.addClass('mel-event-grid') }}>
    {{ rows }}
  </div>
{% endif %}
{% if pager %}
  {{ pager }}
{% endif %}
{% if empty %}
  <div class="view-empty" style="text-align: center; padding: 3rem; color: #5c5c6f;">
    <p style="font-size: 1.25rem;">No events found in this category yet.</p>
    <a href="/create-event" class="mel-btn mel-btn-primary" style="margin-top: 1rem;">Create the first event!</a>
  </div>
{% endif %}













