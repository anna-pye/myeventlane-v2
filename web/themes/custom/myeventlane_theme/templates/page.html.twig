{#
/**
 * @file
 * Theme override for standard pages.
 * 
 * Uses proper Drupal attributes and includes header/footer components.
 */
#}
{% set page_attributes = create_attribute() %}
{% set page_attributes = page_attributes.addClass('mel-page') %}

<div{{ page_attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {# ==================== HEADER ==================== #}
  <div class="mel-region-header">
    {% include '@myeventlane_theme/includes/header.html.twig' %}
  </div>

  {# Hero (for pages with hero region) #}
  {% if page.hero %}
    <div class="mel-region-hero">
      {{ page.hero }}
    </div>
  {% endif %}

  {# Pre-Content #}
  {% if page.pre_content %}
    <div class="mel-region-pre-content">
      <div class="mel-container">
        {{ page.pre_content }}
      </div>
    </div>
  {% endif %}

  {# Main Content Area #}
  <main id="main-content" class="mel-main" role="main">
    <div class="mel-container">
      <div class="mel-content">
        {{ page.content }}
      </div>
    </div>
  </main>

  {# Pre-Footer #}
  {% if page.pre_footer %}
    <div class="mel-pre-footer">
      <div class="mel-container">
        {{ page.pre_footer }}
      </div>
    </div>
  {% endif %}

  {# ==================== FOOTER ==================== #}
  <div class="mel-region-footer">
    {% include '@myeventlane_theme/includes/footer.html.twig' %}
  </div>
</div>
