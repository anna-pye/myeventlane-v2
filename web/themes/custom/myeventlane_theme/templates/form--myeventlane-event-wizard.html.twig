{#
  EventWizardForm template.
  Renders the wizard structure built by EventWizardForm::buildForm().
#}
<div style="background: orange; padding: 2rem; border: 5px solid black; margin: 2rem 0; font-size: 2em; z-index: 99999; position: relative;">
  ðŸŽ¯ TEMPLATE IS BEING USED! If you see this orange box, the template file is working.
</div>

<form{{ attributes.addClass('mel-event-form-page') }}>
  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}

  {# Render wizard - Drupal will handle all the nested structure #}
  {% if form.wizard %}
    <div style="background: cyan; padding: 1rem; margin: 1rem 0; border: 3px solid blue;">
      <strong>DEBUG: Rendering form.wizard</strong>
      {{ form.wizard }}
    </div>
  {% else %}
    <div style="background: red; padding: 2rem; color: white; font-size: 1.5em;">
      <strong>ERROR:</strong> form.wizard does NOT exist!
      <br>Available keys: {{ form|keys|join(', ') }}
    </div>
  {% endif %}

  {# Hidden wizard state fields #}
  {% if form.wizard_step %}
    {{ form.wizard_step }}
  {% endif %}
  {% if form.wizard_event_id %}
    {{ form.wizard_event_id }}
  {% endif %}

  {# Render any remaining system fields - DO NOT exclude wizard! #}
  {{ form|without(
    'form_build_id',
    'form_token',
    'form_id',
    'wizard_step',
    'wizard_event_id'
  ) }}
</form>
