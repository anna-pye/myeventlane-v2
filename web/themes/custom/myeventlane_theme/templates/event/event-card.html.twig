{#
  Canonical MyEventLane Event Card
  Used everywhere: Home, Featured, Taxonomy, Search, Views
  
  Variables:
  - variant: Optional variant class (e.g., 'featured')
#}

<article class="mel-event-card{% if variant %} mel-event-card--{{ variant }}{% endif %}">
  <a href="{{ url }}" class="mel-card-link">

    <div class="mel-card-media">
      {% if image %}
        <img src="{{ image }}" alt="{{ title|default('') }}" loading="lazy">
      {% else %}
        <div class="mel-card-placeholder"></div>
      {% endif %}

      <div class="mel-date-badge">
        <span class="mel-date-day">{{ date_day }}</span>
        <span class="mel-date-month">{{ date_month }}</span>
      </div>

      <div class="mel-status-pill mel-status-{{ ticket_type }}">
        {{ ticket_label }}
      </div>
    </div>

    <div class="mel-card-body">
      {# Date/Time - first, smaller, lighter #}
      <div class="mel-card-date">
        {{ date_full }}
      </div>

      {# Event Title - larger, bolder #}
      <h3 class="mel-card-title">{{ title|default('') }}</h3>

      {# Location - smaller, lighter #}
      {% if location %}
        <div class="mel-card-location">{{ location }}</div>
      {% endif %}
    </div>

  </a>
</article>
