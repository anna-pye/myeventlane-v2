{#
  Canonical MyEventLane Event Card
  Used everywhere: Home, Featured, Taxonomy, Search, Views
  
  Variables:
  - variant: Optional variant class (e.g., 'featured')
#}

<article class="mel-event-card{% if variant %} mel-event-card--{{ variant }}{% endif %}">
  <a href="{{ url }}" class="mel-card-link">

    <div class="mel-card-media">
      {% if image %}
        <img src="{{ image }}" alt="{{ title }}" loading="lazy">
      {% else %}
        <div class="mel-card-placeholder"></div>
      {% endif %}

      <div class="mel-date-badge">
        <span class="mel-date-day">{{ date_day }}</span>
        <span class="mel-date-month">{{ date_month }}</span>
      </div>

      <div class="mel-status-pill mel-status-{{ ticket_type }}">
        {{ ticket_label }}
      </div>
    </div>

    <div class="mel-card-body">
      <h3 class="mel-card-title">{{ title }}</h3>

      <div class="mel-card-meta">
        <span class="mel-meta-date">{{ date_full }}</span>
        {% if location %}
          <span class="mel-meta-location">{{ location }}</span>
        {% endif %}
      </div>

      <div class="mel-card-hover-meta">
        {% if category %}
          <span class="mel-category-pill mel-cat-{{ category_slug }}">
            {{ category }}
          </span>
        {% endif %}

        {% if accessibility %}
          <div class="mel-accessibility">
            {% for icon in accessibility %}
              <span class="mel-accessibility-icon">{{ icon }}</span>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <div class="mel-card-cta">
        <span class="mel-btn mel-btn-primary">
          {{ ticket_label }}
        </span>
      </div>
    </div>

  </a>
</article>
