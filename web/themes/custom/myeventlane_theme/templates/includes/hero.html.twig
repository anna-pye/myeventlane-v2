{#
/**
 * @file
 * Hero section for the front page.
 * Humanitix-inspired design with branding, categories, and search.
 */
#}

<section class="mel-hero">
  <div class="mel-container mel-hero-inner">

    {# Header: Brand + Illustration #}
    <div class="mel-hero-header">
      <div class="mel-hero-brand">
        <h1 class="mel-hero-logo">
          <span class="mel-hero-logo-icon">
            <svg viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <rect width="64" height="64" rx="12" fill="#ff6f61"/>
              <path d="M16 64 C16 64 16 44 24 36 C28 32 34 34 38 32 C44 29 42 22 38 18 C34 14 28 16 24 22 C20 28 20 36 20 36" fill="#faf7fb"/>
              <line x1="40" y1="14" x2="48" y2="6" stroke="#ffd46f" stroke-width="4" stroke-linecap="round"/>
              <line x1="46" y1="20" x2="56" y2="16" stroke="#ffd46f" stroke-width="4" stroke-linecap="round"/>
              <line x1="48" y1="28" x2="58" y2="28" stroke="#ffd46f" stroke-width="4" stroke-linecap="round"/>
            </svg>
          </span>
          <span class="mel-hero-logo-text">
            <span class="mel-hero-logo-my">My</span>
            <span class="mel-hero-logo-eventlane">EventLane</span>
          </span>
        </h1>
        <p class="mel-hero-tagline">Empowering Event Creators</p>
      </div>

      {# Decorative illustration - colorful pie/wheel #}
      <div class="mel-hero-illustration" aria-hidden="true">
        <div class="mel-hero-pie"></div>
      </div>
    </div>

    {# Category Chips #}
    <div class="mel-hero-categories">
      <a href="/events" class="mel-category-chip mel-category-chip--coral is-active">
        All Events
      </a>
      {% if categories is defined and categories|length %}
        {% for term in categories %}
          <a href="/events?category={{ term.tid }}" class="mel-category-chip">
            {{ term.name }}
          </a>
        {% endfor %}
      {% else %}
        {# Default categories #}
        <a href="/events?type=workshop" class="mel-category-chip mel-category-chip--coral">
          Workshop
        </a>
        <a href="/events?type=music" class="mel-category-chip mel-category-chip--purple">
          Music
        </a>
        <a href="/events?type=community" class="mel-category-chip mel-category-chip--blue">
          Community
        </a>
        <a href="/events?type=food" class="mel-category-chip mel-category-chip--teal">
          Food & Drink
        </a>
      {% endif %}
    </div>

    {# Search Bar #}
    <form class="mel-hero-search" action="/events" method="get">
      <div class="mel-hero-search-box">
        <input 
          type="text"
          name="q"
          placeholder="Search events..."
          value="{{ search_query|default('') }}"
          aria-label="Search events"
        >
        <button type="submit" class="mel-hero-search-btn">Search</button>
      </div>
    </form>

  </div>
</section>
