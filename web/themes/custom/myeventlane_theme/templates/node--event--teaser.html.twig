{#
/**
 * @file
 * Theme override for event nodes in teaser view mode.
 *
 * Implements Theme + Preprocess Contract: Twig renders only provided variables.
 * Entire card is a clickable link to the event.
 */
#}

<article class="mel-event-card">
  <a href="{{ url }}" class="mel-event-card__link">
    <div class="mel-event-card__image">
      {% if card_image_url %}
        <img src="{{ card_image_url }}" alt="{{ card_title }}">
      {% endif %}
    </div>

    <div class="mel-event-card__content">
      <h3>{{ card_title }}</h3>
      <div class="mel-event-card__meta">
        {% if card_date and card_location %}
          {{ card_date }} Â· {{ card_location }}
        {% elseif card_date %}
          {{ card_date }}
        {% elseif card_location %}
          {{ card_location }}
        {% endif %}
      </div>

      {% if card_badge %}
        <span class="mel-event-card__badge">
          {{ card_badge }}
        </span>
      {% endif %}
    </div>
  </a>
</article>
