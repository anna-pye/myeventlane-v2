<header class="mel-header">
  <div class="mel-header-inner mel-container">

    <div class="mel-header-left">
      <a href="{{ path('<front>') }}" class="mel-logo">
        <span class="mel-logo-text">MyEventLane</span>
      </a>
    </div>

    <nav class="mel-nav-desktop">
      <ul class="mel-nav-list">
        <li><a href="/events" class="mel-nav-link">Events</a></li>
        <li><a href="/categories" class="mel-nav-link">Categories</a></li>
        <li><a href="/vendors" class="mel-nav-link">Vendors</a></li>
      </ul>
    </nav>

    <div class="mel-header-actions">
      {% if logged_in %}
        <a href="/dashboard" class="mel-btn mel-btn-primary">Dashboard</a>
      {% else %}
        <a href="/user/login" class="mel-btn mel-btn-ghost">Login</a>
      {% endif %}
      <a href="/create-event" class="mel-btn mel-btn-accent">{{ 'Create Event'|t }}</a>
    </div>

    <button class="mel-nav-toggle" aria-label="Open menu">
      <span class="mel-nav-toggle-box">
        <span class="mel-nav-toggle-line"></span>
      </span>
    </button>
  </div>

  <div class="mel-nav-mobile-wrapper">
    <nav class="mel-nav-mobile">
      <ul class="mel-nav-mobile-list">
        <li><a href="/events">Events</a></li>
        <li><a href="/categories">Categories</a></li>
        <li><a href="/vendors">Vendors</a></li>
        <li class="mel-mobile-divider"></li>
        {% if logged_in %}
          <li><a href="/dashboard">Dashboard</a></li>
        {% else %}
          <li><a href="/user/login">Login</a></li>
        {% endif %}
        <li><a href="/create-event" class="mel-btn-mobile-accent">{{ 'Create Event'|t }}</a></li>
      </ul>
    </nav>
  </div>
</header>