{#
/**
 * @file
 * Theme override for user login form.
 *
 * Provides a centered, branded authentication card layout.
 */
#}

<div class="mel-auth-page">
  <div class="mel-auth-container">
    <div class="mel-auth-card">
      <div class="mel-auth-header">
        <a href="{{ path('<front>') }}" class="mel-auth-logo" aria-label="{{ 'MyEventLane Home'|t }}">
          <svg viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <rect width="64" height="64" rx="12" fill="#ff6f61"/>
            <path d="M16 64 C16 64 16 44 24 36 C28 32 34 34 38 32 C44 29 42 22 38 18 C34 14 28 16 24 22 C20 28 20 36 20 36" fill="#faf7fb"/>
            <line x1="40" y1="14" x2="48" y2="6" stroke="#ffd46f" stroke-width="4" stroke-linecap="round"/>
            <line x1="46" y1="20" x2="56" y2="16" stroke="#ffd46f" stroke-width="4" stroke-linecap="round"/>
            <line x1="48" y1="28" x2="58" y2="28" stroke="#ffd46f" stroke-width="4" stroke-linecap="round"/>
          </svg>
        </a>
        <h1 class="mel-auth-title">{{ 'Log in to MyEventLane'|t }}</h1>
        <p class="mel-auth-subtitle">{{ 'Welcome back! Sign in to your account to continue.'|t }}</p>
      </div>

      {{ form|without('name', 'pass', 'actions', 'form_build_id', 'form_token', 'form_id') }}

      <div class="mel-auth-form">
        <div class="form-item">
          {{ form.name }}
        </div>

        <div class="form-item">
          {{ form.pass }}
          <div class="description">
            <a href="{{ path('user.pass') }}" class="mel-link-text">{{ 'Forgot your password?'|t }}</a>
          </div>
        </div>

        {% if form.remember_me %}
          <div class="mel-auth-remember">
            {{ form.remember_me }}
          </div>
        {% endif %}

        <div class="mel-auth-actions">
          {{ form.actions }}
        </div>
      </div>

      <div class="mel-auth-footer">
        <p class="mel-auth-link">
          {{ "Don't have an account?"|t }} <a href="{{ path('user.register') }}">{{ 'Sign up'|t }}</a>
        </p>
      </div>

      {{ form.form_build_id }}
      {{ form.form_token }}
      {{ form.form_id }}
    </div>
  </div>
</div>

