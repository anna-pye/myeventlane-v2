{#
  Front page wrapper.
  Renders the new hero and above-the-cards UI, then your existing page content (event cards).
#}

{% set page_attributes = create_attribute() %}
{% set page_attributes = page_attributes.addClass('mel-page', 'mel-front') %}

<div{{ page_attributes }}>

  {# Skip to main content #}
  <a href="#main-content" class="visually-hidden focusable skip-link">
    {{ 'Skip to main content'|t }}
  </a>

  {{ title_prefix }}
  {{ title_suffix }}

  {# ==================== HEADER ==================== #}
  <div class="mel-region-header">
    {% include '@myeventlane_theme/includes/header.html.twig' %}
  </div>

  <section class="mel-front-hero">
    <div class="mel-front-hero__inner">

      <div class="mel-front-hero__left">
        {% include '@myeventlane_theme/components/front/_front-hero.html.twig' with {
          front: mel_front|default({})
        } only %}

        {% include '@myeventlane_theme/components/front/_front-search.html.twig' with {
          front: mel_front|default({})
        } only %}

        {% include '@myeventlane_theme/components/front/_front-pills.html.twig' with {
          front: mel_front|default({})
        } only %}

        {% include '@myeventlane_theme/components/front/_front-values.html.twig' with {
          front: mel_front|default({})
        } only %}
      </div>

      <div class="mel-front-hero__right">
        {% include '@myeventlane_theme/components/front/_front-pie.html.twig' with {
          front: mel_front|default({})
        } only %}
      </div>

    </div>
  </section>

  {# Pre-Content (messages, etc.) #}
  {% if page.pre_content %}
    <div class="mel-region-pre-content">
      <div class="mel-container">
        {{ page.pre_content }}
      </div>
    </div>
  {% endif %}

  <main id="main-content" class="mel-main mel-front-content" role="main">
    <div class="mel-front-content__inner">
      {{ page.content }}
    </div>
  </main>

  {# Pre-Footer #}
  {% if page.pre_footer %}
    <div class="mel-pre-footer">
      <div class="mel-container">
        {{ page.pre_footer }}
      </div>
    </div>
  {% endif %}

  {# ==================== FOOTER ==================== #}
  <div class="mel-region-footer">
    {% include '@myeventlane_theme/includes/footer.html.twig' %}
  </div>

</div>
