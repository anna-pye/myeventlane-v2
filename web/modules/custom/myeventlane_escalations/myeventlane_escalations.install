    'primary key' => ['id'],
    'indexes' => [
      'uuid' => ['uuid'],
      'user_id' => ['user_id'],
      'status' => ['status'],
      'priority' => ['priority'],
      'created' => ['created'],
    ],
  ];

  return $schema;
}
















