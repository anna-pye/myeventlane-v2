{#
/**
 * @file
 * Template for vendor console pages.
 *
 * Available variables:
 * - title: Page title.
 * - header_actions: Array of action buttons [{label, url}].
 * - tabs: Array of tab links [{label, url, active}].
 * - body: The main content render array.
 */
#}
<div class="mel-console-page">
  {# Page header #}
  {% if title or header_actions %}
    <div class="mel-console-page__header">
      {% if title %}
        <h1 class="mel-console-page__title">{{ title }}</h1>
      {% endif %}
      {% if header_actions %}
        <div class="mel-console-page__actions">
          {% for action in header_actions %}
            <a href="{{ action.url }}" class="mel-btn mel-btn--{{ action.style|default('primary') }}">
              {{ action.label }}
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  {% endif %}

  {# Tabs navigation #}
  {% if tabs %}
    <nav class="mel-console-page__tabs" role="tablist">
      {% for tab in tabs %}
        <a href="{{ tab.url }}"
           class="mel-console-page__tab{% if tab.active %} is-active{% endif %}"
           role="tab"
           aria-selected="{{ tab.active ? 'true' : 'false' }}">
          {{ tab.label }}
        </a>
      {% endfor %}
    </nav>
  {% endif %}

  {# Main body content #}
  <div class="mel-console-page__body">
    {{ body }}
  </div>
</div>
















