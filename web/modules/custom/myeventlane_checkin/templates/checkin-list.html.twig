{#
/**
 * @file
 * Check-in list template.
 */
#}
<div class="checkin-list">
  <h1>{{ 'Attendee List: @event'|t({'@event': event.label}) }}</h1>

  <div class="checkin-actions">
    <a href="{{ path('myeventlane_checkin.page', {'node': event.id}) }}" class="button">{{ 'Back to Check-in'|t }}</a>
  </div>

  <table class="checkin-table">
    <thead>
      <tr>
        <th>{{ 'Name'|t }}</th>
        <th>{{ 'Email'|t }}</th>
        <th>{{ 'Status'|t }}</th>
        <th>{{ 'Actions'|t }}</th>
      </tr>
    </thead>
    <tbody>
      {% for attendee in attendees %}
        <tr>
          <td>{{ attendee.name }}</td>
          <td>{{ attendee.email }}</td>
          <td>
            {% if attendee.checked_in %}
              <span class="status-badge status-checked-in">{{ 'Checked in'|t }}</span>
            {% else %}
              <span class="status-badge status-not-checked-in">{{ 'Not checked in'|t }}</span>
            {% endif %}
          </td>
          <td>
            <button class="checkin-toggle-button" data-attendee-id="{{ attendee.id }}" data-type="{{ attendee.type }}">
              {% if attendee.checked_in %}
                {{ 'Undo'|t }}
              {% else %}
                {{ 'Check in'|t }}
              {% endif %}
            </button>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
