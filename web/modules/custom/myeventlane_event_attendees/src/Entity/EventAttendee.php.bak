<?php

namespace Drupal\myeventlane_event_attendees\Entity;

use Drupal\Core\Entity\EntityChangedTrait;
use Drupal\Core\Entity\EntityPublishedTrait;
use Drupal\Core\Entity\ContentEntityBase;
use Drupal\Core\Entity\EntityTypeInterface;
use Drupal\Core\Field\BaseFieldDefinition;

/**
 * Defines the Event Attendee entity.
 *
 * @ContentEntityType(
 *   id = "event_attendee",
 *   label = @Translation("Event Attendee"),
 *   handlers = {
 *     "list_builder" = "Drupal\Core\Entity\EntityListBuilder",
 *     "view_builder" = "Drupal\Core\Entity\EntityViewBuilder",
 *     "access" = "Drupal\Core\Entity\EntityAccessControlHandler",
 *     "form" = {
 *       "add" = "Drupal\Core\Entity\ContentEntityForm",
 *       "edit" = "Drupal\Core\Entity\ContentEntityForm",
 *       "delete" = "Drupal\Core\Entity\ContentEntityDeleteForm"
 *     }
 *   },
 *   base_table = "event_attendee",
 *   admin_permission = "administer event attendees",
 *   entity_keys = {
 *     "id" = "id",
 *     "uuid" = "uuid"
 *   },
 *   field_ui_base_route = "entity.event_attendee.settings"
 * )
 */
class EventAttendee extends ContentEntityBase {

  use EntityChangedTrait;

  /**
   * Defines fields.
   */
  public static function baseFieldDefinitions(EntityTypeInterface $entity_type) {

    $fields = parent::baseFieldDefinitions($entity_type);

    $fields['event_id'] = BaseFieldDefinition::create('entity_reference')
      ->setLabel(t('Event'))
      ->setDescription(t('The event node.'))
      ->setSetting('target_type', 'node')
      ->setRequired(TRUE);

    $fields['user_id'] = BaseFieldDefinition::create('entity_reference')
      ->setLabel(t('User'))
      ->setSetting('target_type', 'user')
      ->setRequired(FALSE);

    $fields['record_type'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Record type'))
      ->setDescription(t('RSVP or ticket.'))
      ->setSettings(['max_length' => 20])
      ->setRequired(TRUE);

    $fields['status'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Status'))
      ->setDescription(t('confirmed|waitlisted|cancelled|checkedin'))
      ->setSettings(['max_length' => 20])
      ->setDefaultValue('confirmed');

    $fields['ticket_type'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Ticket type'))
      ->setSettings(['max_length' => 255])
      ->setRequired(FALSE);

    $fields['ticket_variation'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Ticket variation'))
      ->setSettings(['max_length' => 255])
      ->setRequired(FALSE);

    $fields['first_name'] = BaseFieldDefinition::create('string')
      ->setLabel(t('First name'))
      ->setSettings(['max_length' => 255])
      ->setRequired(TRUE);

    $fields['last_name'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Last name'))
      ->setSettings(['max_length' => 255])
      ->setRequired(TRUE);

    $fields['email'] = BaseFieldDefinition::create('email')
      ->setLabel(t('Email'))
      ->setRequired(TRUE);

    $fields['extra_answers'] = BaseFieldDefinition::create('string_long')
      ->setLabel(t('Extra answers'))
      ->setDescription(t('JSON blob containing vendor-defined answers.'))
      ->setRequired(FALSE);

    $fields['created'] = BaseFieldDefinition::create('created')
      ->setLabel(t('Created'));

    $fields['changed'] = BaseFieldDefinition::create('changed')
      ->setLabel(t('Changed'));

    return $fields;
  }
}