{#
/**
 * @file
 * MyEventLane category pills block template.
 *
 * Variables:
 * - categories: Array of items with keys: tid, label, color.
 */
#}
<nav class="mel-category-pills" aria-label="Event categories">
  {% for c in categories %}
    <a
      href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': c.tid}) }}"
      class="mel-pill"
      style="--pill-color: {{ c.color }}"
    >
      {{ c.label }}
    </a>
  {% endfor %}
</nav>
