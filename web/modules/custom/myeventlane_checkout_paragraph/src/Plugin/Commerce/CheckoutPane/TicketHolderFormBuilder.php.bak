<?php

namespace Drupal\myeventlane_checkout_paragraph\Entity;

use Drupal\Core\Entity\ContentEntityBase;
use Drupal\Core\Entity\EntityTypeInterface;
use Drupal\Core\Field\BaseFieldDefinition;
use Drupal\user\UserInterface;

/**
 * Defines the TicketHolderInfo entity.
 *
 * @ContentEntityType(
 *   id = "ticket_holder_info",
 *   label = @Translation("Ticket Holder Info"),
 *   base_table = "ticket_holder_info",
 *   entity_keys = {
 *     "id" = "id",
 *     "uuid" = "uuid",
 *     "label" = "label"
 *   },
 *   admin_permission = "administer ticket holder info",
 *   handlers = {
 *     "access" = "Drupal\\myeventlane_checkout_paragraph\\TicketHolderAccessController",
 *     "storage_schema" = "Drupal\\Core\\Entity\\Sql\\SqlContentEntityStorageSchema"
 *   },
 * )
 */
class TicketHolderInfo extends ContentEntityBase {

  /**
   * Define base fields.
   */
  public static function baseFieldDefinitions(EntityTypeInterface $entity_type): array {
    $fields = parent::baseFieldDefinitions($entity_type);

    $fields['label'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Label'))
      ->setDescription(t('A display label for admin use.'))
      ->setRequired(TRUE);

    $fields['order_id'] = BaseFieldDefinition::create('entity_reference')
      ->setLabel(t('Order'))
      ->setDescription(t('Reference to the related Commerce Order.'))
      ->setSetting('target_type', 'commerce_order')
      ->setRequired(TRUE);

    $fields['event_id'] = BaseFieldDefinition::create('entity_reference')
      ->setLabel(t('Event'))
      ->setSetting('target_type', 'node')
      ->setRequired(TRUE);

    $fields['ticket_type'] = BaseFieldDefinition::create('entity_reference')
      ->setLabel(t('Ticket Type'))
      ->setSetting('target_type', 'commerce_product_variation')
      ->setRequired(TRUE);

    $fields['first_name'] = BaseFieldDefinition::create('string')
      ->setLabel(t('First name'))
      ->setRequired(TRUE);

    $fields['last_name'] = BaseFieldDefinition::create('string')
      ->setLabel(t('Last name'))
      ->setRequired(TRUE);

    $fields['email'] = BaseFieldDefinition::create('email')
      ->setLabel(t('Email'))
      ->setRequired(TRUE);

    $fields['extra_answers'] = BaseFieldDefinition::create('map')
      ->setLabel(t('Extra Answers'))
      ->setDescription(t('Stores vendor-defined attendee question answers as key-value.'));

    $fields['uid'] = BaseFieldDefinition::create('entity_reference')
      ->setLabel(t('Submitted by'))
      ->setSetting('target_type', 'user')
      ->setDefaultValueCallback(static::class . '::getCurrentUserId')
      ->setDisplayConfigurable('view', TRUE);

    $fields['created'] = BaseFieldDefinition::create('created')
      ->setLabel(t('Created'));

    return $fields;
  }

  /**
   * Default value callback for 'uid' base field.
   */
  public static function getCurrentUserId() {
    return [\Drupal::currentUser()->id()];
  }
}